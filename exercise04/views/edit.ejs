<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include('includes/nav.ejs') %>
    <main>
        <h1>Choose Your Team</h1>
        <form action="/" method="post" class="edit-team__form">
            <div class="edit-team__team">
                <label for="teamName">Team Name</label>
                <input type="text" name="teamName" />
            </div>

            <div class="edit-team__player">
                <label for="player0">Player 1</label>
                <input type="text" name="player0" />
            </div>

            <div class="edit-team__player">
                <label for="player1">Player 2</label>
                <input type="text" name="player1" />
            </div>

            <div class="edit-team__player">
                <label for="player2">Player 3</label>
                <input type="text" name="player2" />
            </div>

            <div class="edit-team__player">
                <label for="player3">Player 4</label>
                <input type="text" name="player3" />
            </div>

            <div class="edit-team__player">
                <label for="player4">Player 5</label>
                <input type="text" name="player4" />
            </div>
            <button type="submit">Submit</button>
        </form>
    </main>

    <%- include('includes/end.ejs') %>